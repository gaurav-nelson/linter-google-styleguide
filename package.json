{
  "name": "linter-google-styleguide",
  "version": "0.0.0",
  "description": "Linter plugin providing Google style guide word usage advice.",
  "license": "MIT",
  "keywords": [
    "asciidoc",
    "text",
    "googlestyleguide",
    "writing",
    "language",
    "english",
    "linter"
  ],
  "author": "Gaurav Nelson",
  "repository": "https://github.com/gaurav-nelson/linter-google-styleguide",
  "bugs": "https://github.com/gaurav-nelson/linter-google-styleguide/issues",
  "main": "lib/index.js",
  "files": [
    "lib/index.js",
    "lib/wordusage.js"
  ],
  "engines": {
    "atom": ">=1.0.0 <2.0.0"
  },
  "dependencies": {
    "atom-package-deps": ">=4.6.1",
    "minimatch": ">=3.0.4",
    "object-keys": ">=1.0.11",
    "unified": ">=6.1.6",
    "vfile": ">=2.3.0",
    "vfile-sort": ">=2.1.0",
    "retext-english": ">=3.0.0",
    "retext-google-styleguide": ">=1.0.0"
  },
  "package-deps": [
    "linter"
  ],
  "providedServices": {
    "linter": {
      "versions": {
        "2.0.0": "provideLinter"
      }
    }
  },
  "configSchema": {
    "ignoreFiles": {
      "description": "Disable files matching (minimatch) glob",
      "type": "string",
      "default": "",
      "order": 5
    },
    "grammars": {
      "description": "List of scopes for languages which will be checked. Note: setting new sources overwrites the defaults.",
      "type": "array",
      "default": [
        "source.asciidoc",
        "source.gfm",
        "source.pfm",
        "text.git-commit",
        "text.plain",
        "text.plain.null-grammar"
      ],
      "order": 1
    },
    "severityLevel": {
      "type": "string",
      "title": "Severity level",
      "default": "warning",
      "enum": [
        "error",
        "warning",
        "info"
      ],
      "order": 2
    },
    "ignoredWords": {
      "type": "string",
      "title": "Ignore Words",
      "description": "Comma-seperated list of words to ignore. (NOTE: Restart `Atom` for Ignore Words to take effect.)",
      "default": "",
      "order": 3
    }
  }
}
